<kml>

<concept name=Widen><system-documentation name=Widen>
<superconcept name=Increase>

<definition>

  An <conceptref name=Entity> increases in <slot>width</slot>

</definition>

<requiredslotlist>

  <slotdescription name=object>
     the entity that becomes wider
  </slotdescription>

</requiredslotlist>

<primaryslotlist>

  <slotdescription name=from-value>
    the initial value of the <slot>width</slot> before the event
  </slotdescription>

  <slotdescription name=to-value>
    the final value of the <slot>width</slot> after the event
  </slotdescription>

</primaryslotlist>

<examplesentencelist>

  <examplesentence>
    <text>John widened the crack with a chisel.</text>
    <slotdescription name=agent>John</slotdescription>
    <slotdescription name=object>the crack</slotdescription>
    <slotdescription name=instrument>chisel</slotdescription>
  </examplesentence>

</examplesentencelist>


</kml>


