<kml>
<property-doc name=truth/Truth-Value>
<system-documentation name=Truth-Value>
<gpd-documentation name=Property>

<from name=Information>
<to name=Truth-Value>


<description> 
  the truth value of an information
</description>

<value-description>
<categorical-value-description>
    any truth value<p>
    <categoricals>true, false</categoricals>

<p>
    <examplesentence>
      <text>It's true that I borrowed money from him.</text>
      <slotdescription name=value>*true</slotdescription>
    </examplesentence>
  </categorical-value-description>
</value-description>
</kml>

