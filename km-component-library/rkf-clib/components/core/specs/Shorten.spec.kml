<kml>

<concept name=Shorten><system-documentation name=Shorten>
<superconcept name=Decrease>

<definition>

  An <conceptref name=Entity> decreases in <slot>length</slot>

</definition>

<requiredslotlist>

  <slotdescription name=object>
     the entity that becomes shorter
  </slotdescription>

</requiredslotlist>

<primaryslotlist>

  <slotdescription name=from-value>
    the initial value of the <slot>length</slot> before the event
  </slotdescription>

  <slotdescription name=to-value>
    the final value of the <slot>length</slot> after the event
  </slotdescription>

</primaryslotlist>

<examplesentencelist>

  <examplesentence>
    <text>John shortened the rope.</text>
    <slotdescription name=agent>John</slotdescription>
    <slotdescription name=object>the rope</slotdescription>
  </examplesentence>

</examplesentencelist>


</kml>


