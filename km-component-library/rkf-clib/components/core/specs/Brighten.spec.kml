<kml>

<concept name=Brighten><system-documentation name=Brighten>
<superconcept name=Increase>

<definition>

  An <conceptref name=Increase> in <slot>brightness</slot>

</definition>

<primaryslotlist>

  <slotdescription name=from-value>
    the initial value of <slot>brightness</slot> before the event
  </slotdescription>

  <slotdescription name=to-value>
    the final value of <slot>brightness</slot> after the event
  </slotdescription>

</primaryslotlist>

<examplesentencelist>

  <examplesentence>
    <text>John brightened the lights.</text>
    <slotdescription name=agent>John</slotdescription>
    <slotdescription name=base>the lights</slotdescription>
  </examplesentence>

</examplesentencelist>

<neighborlist>

  <neighbor name=Dim>
     To opposite of <conceptref name=Brighten>
  </neighbor>

</neighborlist>
</kml>


