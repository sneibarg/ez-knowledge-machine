<kml>

<property-doc name=orientation>
<system-documentation name=Orientation-Value>
<gpd-documentation name=Property>

<from name=Entity>
<to name=Orientation-Value>

<description>
  the orientation of an Entity
</description>

<value-description>

  <cardinal-value-description>
    a number along with any of the units of measurement for <conceptref name=UoM-Angle>
<p>
    <examplesentence>
      <text>45 degrees</text>
      <slotdescription name=number>180</slotdescription>
      <slotdescription name=unit of measure>*degree</slotdescription>
    </examplesentence>
  </cardinal-value-description>

  <categorical-value-description>
    any orientation value
    <p>
    <categoricals>horizontal, vertical, upright</categoricals>
    <p>
    <examplesentence>
      <text>The pen was placed vertically on the desk</text>
      <slotdescription name=value>vertical</slotdescription>
    </examplesentence>
  </categorical-value-description>
</value-description>

</kml>
